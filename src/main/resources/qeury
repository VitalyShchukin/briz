CREATE DATABASE briz;

CREATE TABLE group (
id INTEGER primary key,
mnemocode VARCHAR(10)
);

CREATE TABLE student(
id INTEGER primary key,
first_name VARCHAR(50),
middle_name VARCHAR(50),
last_name VARCHAR(50),
born_year INTEGER,
gender VARCHAR(1)
);

CREATE TABLE teacher(
id INTEGER primary key,
first_name VARCHAR(50),
middle_name VARCHAR(50),
last_name VARCHAR(50),
born_year INTEGER,
gender VARCHAR(1),
main_subject VARCHAR(50)
);